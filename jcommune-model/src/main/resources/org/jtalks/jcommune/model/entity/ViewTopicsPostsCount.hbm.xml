<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
    <class name="ViewCountPostsTopics" table="COUNT_POSTS_TOPICS_VIEW">
        <id column="TOPIC_ID" name="id"/>
        <many-to-one name="topic" column="TOPIC_ID" class="Topic" insert="false" update="false"/>
        <many-to-one name="branch" column="BRANCH_ID" class="Branch" insert="false" update="false"/>
        <property name="postsCount" column="POSTS_COUNT" insert="false" update="false"/>
    </class>
</hibernate-mapping>
