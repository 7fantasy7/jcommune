<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity" auto-import="false">
    <class name="Banner" table="BANNER">
        <cache usage="nonstrict-read-write" region="org.jtalks.EHCOMMON"/>
        <id column="BANNER_ID" name="id" unsaved-value="0">
            <generator class="native"/>
        </id>

        <property column="UUID" name="uuid" unique="true" not-null="true"/>
        <property name="positionOnPage" column="POSITION" not-null="true"/>
        <property name="content" column="CONTENT" not-null="true"/>

    </class>
    
    <query name="getBannerByPosition">
        <![CDATA[FROM Banner b WHERE positionOnPage = :positionOnPage]]>
    </query>
    
</hibernate-mapping>