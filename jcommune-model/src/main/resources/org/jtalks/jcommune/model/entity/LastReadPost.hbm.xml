<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
    <class name="LastReadPost" table="LAST_READ_POSTS">
        <composite-id>
            <key-many-to-one name="user" column="USER_ID" class="JCUser"/>
            <key-many-to-one name="topic" column="TOPIC_ID" class="Topic"/>
        </composite-id>
        <property name="postIndex" column="LAST_READ_POST_INDEX" not-null="true"/>
    </class>
</hibernate-mapping>