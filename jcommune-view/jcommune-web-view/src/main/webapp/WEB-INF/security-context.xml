<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd
       ">
    <!-- Http Security -->
    <bean id="accessDecisionManager" class="org.springframework.security.access.vote.AffirmativeBased">
        <property name="decisionVoters">
            <list>
                <bean class="org.springframework.security.web.access.expression.WebExpressionVoter">
                    <property name="expressionHandler" ref="expressionHandler"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="expressionHandler" class="org.jtalks.jcommune.service.security.PermissionExpressionHandler"
          p:permissionEvaluator-ref="aclGroupPermissionEvaluator"/>

    <security:http access-decision-manager-ref="accessDecisionManager" auto-config="true" use-expressions="true"
                   create-session="ifRequired">

        <security:session-management session-authentication-strategy-ref="concurrentSessionControlStrategy"/>

        <security:intercept-url pattern="/topics/new" method="GET"
                                access="hasPermission('branchId','BRANCH','BranchPermission.CREATE_TOPICS')"/>

        <security:intercept-url pattern="/posts/new"
                                access="hasPermission('branchId','BRANCH','BranchPermission.CREATE_POSTS')"/>
        <security:intercept-url pattern="/posts/*/delete" method="GET" access="hasPermission('branchId','BRANCH','BranchPermission.DELETE_OWN_POSTS')
        or hasPermission('branchId','BRANCH','BranchPermission.DELETE_OTHERS_POSTS')"/>
        <security:intercept-url pattern="/posts/*" method="DELETE" access="hasPermission('branchId','BRANCH','BranchPermission.DELETE_OWN_POSTS')
        or hasPermission('branchId','BRANCH','BranchPermission.DELETE_OTHERS_POSTS')"/>

        <security:intercept-url pattern="/users/new" method="GET" access="permitAll"/>
        <security:intercept-url pattern="/user" method="GET" access="isAuthenticated"/>
        <security:intercept-url pattern="/users/**" access="isAuthenticated"/>
        <security:intercept-url pattern="/user/activate/**" access="permitAll"/>

        <security:intercept-url pattern="/pm/**" access="isAuthenticated"/>
        <security:intercept-url pattern="/pm/new/**" access="hasPermission('userId','USER','ProfilePermission.SEND_PRIVATE_MESSAGES')"/>
        <security:intercept-url pattern="/inbox" access="isAuthenticated"/>
        <security:intercept-url pattern="/inbox/**" access="isAuthenticated"/>
        <security:intercept-url pattern="/outbox" access="isAuthenticated"/>
        <security:intercept-url pattern="/reply/**" access="hasPermission('userId','USER','ProfilePermission.SEND_PRIVATE_MESSAGES')"/>
        <security:intercept-url pattern="/quote/**" access="hasPermission('branchId','BRANCH','BranchPermission.CREATE_POSTS')"/>
        <security:intercept-url pattern="/drafts" access="isAuthenticated"/>
        <security:intercept-url pattern="/answer" access="hasPermission('branchId','BRANCH','BranchPermission.CREATE_POSTS')"/>

        <security:intercept-url pattern="/topics/*/subscribe" access="isAuthenticated"/>
        <security:intercept-url pattern="/topics/*/unsubscribe" access="isAuthenticated"/>
        <security:intercept-url pattern="/topics/json/**" access="hasPermission('branchId','BRANCH','GeneralPermission.ADMIN')"/>
        <security:intercept-url pattern="/branches/*/subscribe" access="isAuthenticated"/>
        <security:intercept-url pattern="/branches/*/unsubscribe" access="isAuthenticated"/>

        <security:intercept-url pattern="/poll/**" access="hasPermission('pollId','POLL','TopicPermission.POLL')"/>

        <security:intercept-url pattern="*" access="permitAll"/>

        <security:form-login login-page="/login" login-processing-url="/j_spring_security_check"
                             authentication-failure-url="/login?login_error=1" default-target-url="/"
                             authentication-success-handler-ref="successAuthHandler"/>
        <security:logout logout-url="/logout" logout-success-url="/" invalidate-session="true"/>
        <security:remember-me data-source-ref="dataSource" key="JTalks"/>
    </security:http>

    <bean id="successAuthHandler" class="org.jtalks.jcommune.web.util.SuccessfulAuthenticationHandler">
        <constructor-arg ref="userService"/>
    </bean>

    <bean id="concurrentSessionControlStrategy"
          class="org.springframework.security.web.authentication.session.ConcurrentSessionControlStrategy">
        <constructor-arg name="sessionRegistry" ref="sessionRegistry"/>
        <property name="maximumSessions" value="1"/>
    </bean>

</beans>