<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.antarcticle.model.entity">
  <class name="Comment" table="COMMENT">
    <id name="id" column="COMMENT_ID" unsaved-value="0">
        <generator class="native"/>
    </id>
    <property name="uuid" column="UUID" unique="true" not-null="true"/>
    <property name="creationDate" column="COMMENT_DATE"
        type="org.joda.time.contrib.hibernate.PersistentDateTime"
        not-null="true"/>
    <property name="commentContent" column="COMMENT_CONTENT" not-null="true"/>
    <many-to-one name="userCreated" column="USER_CREATED" class="User" fetch="join"
        foreign-key="FK_USER" lazy="false" not-null="true"/>
    <many-to-one name="article" column="ARTICLE_ID" class="Article" fetch="join"
        foreign-key="FK_ARTICLE" lazy="false" not-null="true"/>
  </class>
</hibernate-mapping>
