<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.antarcticle.model.entity">
  <class name="Comment" table="COMMENT">
    <id column="COMMENT_ID" name="id" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property column="UUID" name="uuid" not-null="true" unique="true"/>
    <property column="COMMENT_DATE" name="creationDate" not-null="true" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
    <property column="COMMENT_CONTENT" name="commentContent" not-null="true"/>
    <many-to-one class="org.jtalks.common.model.entity.User" column="USER_CREATED" fetch="join" foreign-key="FK_USER" lazy="false" name="userCommented" not-null="true"/>
    <many-to-one class="Article" column="ARTICLE_ID" fetch="join" foreign-key="FK_ARTICLE" lazy="false" name="article" not-null="true"/>
  </class>
</hibernate-mapping>
