<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.antarcticle.model.entity">
  <class name="ArticleCollection" table="ARTICLE_COLLECTION">
    <id column="ARTICLE_COLLECTION_ID" name="id" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property column="UUID" name="uuid" not-null="true" unique="true"/>
    <property column="TITLE" name="title" not-null="true"/>
    <property column="DESCRIPTION" name="description" not-null="true"/>
    <many-to-one name="lastArticle" column="LAST_ARTICLE_ID" class="Article"
                 unique="true" foreign-key="FK_LAST_ARTICLE"
                 lazy="false" cascade="all" fetch="select" />
    <list name="articles" cascade="all-delete-orphan" inverse="true">
      <key column="ARTICLE_COLLECTION_ID"/>
      <index column="LIST_INDEX"/>
      <one-to-many class="Article"/>
    </list>
  </class>  
  <query name="getAllArticleCollections">
    SELECT articleCollection
    FROM ArticleCollection AS articleCollection
    LEFT JOIN articleCollection.lastArticle AS lastArticle
    ORDER BY lastArticle.creationDate DESC
  </query>
</hibernate-mapping>
