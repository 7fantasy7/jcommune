<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.jtalks.antarcticle.model.entity.Article" table="ARTICLE">
    <id column="ARTICLE_ID" name="id" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property column="UUID" name="uuid" not-null="true" unique="true"/>
    <property column="ARTICLE_CONTENT" name="articleContent" not-null="true"/>
    <property column="ARTICLE_TITLE" name="articleTitle"/>
    <property column="CREATION_DATE" name="creationDate" not-null="true" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
    <many-to-one column="ARTICLE_COLLECTION_ID" name="articleCollection"
                 foreign-key="FK_ARTICLE_COLLECTION" not-null="false" />
    <many-to-one class="org.jtalks.common.model.entity.User" column="USER_CREATED" fetch="join"
                 foreign-key="FK_USER" lazy="false" name="userCreated" not-null="true"/>
  </class>
  <query name="getAllArticlesInCollection">
      FROM Article as article
               WHERE article.articleCollection = :articleCollectionId ORDER BY article.creationDate
  </query>    
</hibernate-mapping>
