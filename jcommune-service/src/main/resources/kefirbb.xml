<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://kefir-bb.sourceforge.net/schemas"
               xsi:schemaLocation="http://kefir-bb.sourceforge.net/schemas http://kefir-bb.sourceforge.net/schemas/kefir-bb-0.5.xsd">
    <!-- XML escape symbols -->
    <scope name="escapeXml">
        <code priority="100">
            <pattern>&amp;</pattern>
            <template>&amp;amp;</template>
        </code>
        <code priority="100">
            <pattern>&apos;</pattern>
            <template>&amp;apos;</template>
        </code>
        <code priority="100">
            <pattern>&lt;</pattern>
            <template>&amp;lt;</template>
        </code>
        <code priority="100">
            <pattern>&gt;</pattern>
            <template>&amp;gt;</template>
        </code>
        <code priority="100">
            <pattern>&quot;</pattern>
            <template>&amp;quot;</template>
        </code>
        <code priority="100">
            <pattern><var regex="\n"/></pattern>
            <template>&lt;br/&gt;</template>
        </code>                
    </scope>

    <!-- Scope for escaping bb spec chars -->
    <scope name="escapeBb" parent="escapeXml">
        <!--
            Escape bb-code symbols
            double slash to slash
            slash + square bracket to square bracket
         -->
        <code name="slash" priority="10">
            <pattern>\\</pattern>
            <template>\</template>
        </code>
        <code name="left_square_bracket" priority="9">
            <pattern>\[</pattern>
            <template>[</template>
        </code>
        <code name="right_square_bracket" priority="9">
            <pattern>\]</pattern>
            <template>]</template>
        </code>
        <coderef name="comment"/>
    </scope>

    <!-- Comment -->
    <code name="comment">
        <pattern>[*<var parse="false"/>*]</pattern>
        <template/>
    </code>

    <!-- Escape basic HTML char sequences -->
    <scope name="basic" parent="escapeBb">
        <!-- line feed characters -->
        <code name="br1" priority="3">
            <pattern>&#x0A;&#x0D;</pattern>
            <template>&lt;br/&gt;</template>
        </code>
        <code name="br2" priority="2">
            <pattern>&#x0D;&#x0A;</pattern>
            <template>&lt;br/&gt;</template>
        </code>
        <code name="br3" priority="1">
            <pattern>&#x0A;</pattern>
            <template>&lt;br/&gt;</template>
        </code>
        <code name="br4" priority="0">
            <pattern>&#x0D;</pattern>
            <template>&lt;br/&gt;</template>
        </code>

        <!-- Special html symbols -->
        <code name="symbol">
            <pattern>[symbol=<var scope="escapeXml"/>/]</pattern>
            <template>&amp;<var/>;</template>
        </code>

        <!-- angle quotes -->
        <code name="aquote">
            <pattern>[aquote]<var inherit="true"/>[/aquote]</pattern>
            <template>&amp;laquo;<var/>&amp;raquo;</template>
        </code>
    </scope>

    <!-- Root scope. This scope uses when processor started work and by default, if not set other scope -->
    <scope name="ROOT" parent="basic">
        <!-- Formatting -->
        <coderef name="bold"/>
        <coderef name="u"/>
        <coderef name="s"/>
        <coderef name="i"/>
        <coderef name="color_code"/>
        <coderef name="color_name"/>
        <coderef name="size"/>
        <coderef name="font"/>
        <coderef name="highlight"/>
        <coderef name="left"/>
        <coderef name="right"/>
        <coderef name="center"/>
        <coderef name="indent"/>
        <coderef name="list"/>
        <coderef name="offtop"/>

        <!-- Quotes -->
        <coderef name="code"/>
        <coderef name="quote"/>
        <coderef name="quote_named"/>

        <!-- Images -->
        <coderef name="img1"/>

        <!-- links -->
        <coderef name="url1"/>
        <coderef name="url2"/>
        <coderef name="url3"/>
        <coderef name="url4"/>
        <coderef name="url5"/>
        <coderef name="url6"/>

        <!-- Table -->
        <coderef name="table"/>
    </scope>

    <!-- Simple formatting -->
    <code name="bold">
        <pattern>[b]<var inherit="true"/>[/b]</pattern>
        <template>&lt;span style=&quot;font-weight:bold;&quot;&gt;<var/>&lt;/span&gt;</template>
    </code>
    <code name="u">
        <pattern>[u]<var inherit="true"/>[/u]</pattern>
        <template>&lt;span style=&quot;text-decoration:underline;&quot;&gt;<var/>&lt;/span&gt;</template>
    </code>
    <code name="s">
        <pattern>[s]<var inherit="true"/>[/s]</pattern>
        <template>&lt;span style=&quot;text-decoration:line-through;&quot;&gt;<var/>&lt;/span&gt;</template>
    </code>
    <code name="i">
        <pattern>[i]<var inherit="true"/>[/i]</pattern>
        <template>&lt;span style=&quot;font-style:italic;&quot;&gt;<var/>&lt;/span&gt;</template>
    </code>

    <!-- Font color -->
    <code name="color_name">
        <pattern>[color=<var name="color"  regex="\D*"  scope="escapeXml"/>]<var name="text" inherit="true"/>[/color]</pattern>
        <template>&lt;span style=&quot;color:<var name="color"/>;&quot;&gt;<var name="text"/>&lt;/span&gt;</template>
    </code>

    <code name="color_code">
        <pattern>[color=<var name="color" regex="[A-F0-9]{6}" scope="escapeXml"/>]<var name="text" inherit="true"/>[/color]</pattern>
        <template>&lt;span style=&quot;color:#<var name="color"/>;&quot;&gt;<var name="text"/>&lt;/span&gt;</template>
    </code>

    <!-- Font size -->
    <code name="size">
        <pattern>[size=<var name="size" scope="escapeXml"/>]<var name="text" inherit="true"/>[/size]</pattern>
        <template>&lt;span class=&quot;textSize<var name="size"/>&quot;&gt;<var name="text"/>&lt;/span&gt;</template>
    </code>

    <!-- Font family -->
    <code name="font">
        <pattern>[font=<var name="family" scope="escapeXml"/>]<var name="text" inherit="true"/>[/font]</pattern>
        <template>&lt;span style=&quot;font-style:<var name="family"/>;&quot;&gt;<var name="text"/>&lt;/span&gt;</template>
    </code>

    <!-- Text highlight -->
    <code name="highlight">
        <pattern>[highlight]<var name="text" inherit="true"/>[/highlight]</pattern>
        <template>&lt;span class=&quot;highlight&quot;&gt;<var name="text"/>&lt;/span&gt;</template>
    </code>

    <!-- Text, align to left -->
    <code name="left">
        <pattern>[left]<var name="text" inherit="true"/>[/left]</pattern>
        <template>&lt;p class=&quot;leftText&quot;&gt;<var name="text"/>&lt;/p&gt;</template>
    </code>

    <!-- Text, align to right -->
    <code name="right">
        <pattern>[right]<var name="text" inherit="true"/>[/right]</pattern>
        <template>&lt;p class=&quot;rightText&quot;&gt;<var name="text"/>&lt;/p&gt;</template>
    </code>

    <!-- Text, align to center -->
    <code name="center">
        <pattern>[center]<var name="text" inherit="true"/>[/center]</pattern>
        <template>&lt;p class=&quot;centerText&quot;&gt;<var name="text"/>&lt;/p&gt;</template>
    </code>

    <!-- Text indent -->
    <code name="indent">
        <pattern>[indent=<var name="size" scope="escapeXml"/>]<var name="text" inherit="true"/>[/indent]</pattern>
        <template>&lt;p class=&quot;marginLeft<var name="size"/>&quot;&gt;<var name="text"/>&lt;/p&gt;</template>
    </code>

    <!-- List -->
    <code name="list">
        <pattern>[list]<var scope="listScope"/>[/list]</pattern>
        <template>&lt;ul class=&quot;list&quot;&gt;<var/>&lt;/ul&gt;</template>
    </code>
    <scope name="listScope" ignoreText="true">
        <code name="li">
            <pattern>[*]<var regex="[^(\[\*\])]+" scope="escapeXml"/></pattern>
            <template>&lt;li&gt;<var/>&lt;/li&gt;</template>
        </code>
    </scope>

    <!-- Insert image -->
    <code name="img1" priority="2">
        <pattern>[img]<var name="protocol" regex="((ht|f)tps?:|\.{1,2})?"/>/<var name="addr" scope="escapeXml"/>[/img]</pattern>
        <template><![CDATA[<a title="" href="]]><var name="protocol"/>/<var name="addr"/><![CDATA[" rel="prettyPhoto"><img class="thumbnail" alt="" src="]]><var name="protocol"/>/<var name="addr"/><![CDATA["/></a>]]></template>
    </code>


    <!-- Links. http, https, mailto protocols -->
    <scope name="url" parent="basic">
        <coderef name="bold"/>
        <coderef name="u"/>
        <coderef name="s"/>
        <coderef name="i"/>
        <coderef name="color_name"/>
        <coderef name="color_code"/>
        <coderef name="size"/>

        <coderef name="img1"/>
    </scope>

    <!-- HTTP -->
    <code name="url1" priority="2">
        <pattern>[url=<var name="protocol" regex="((ht|f)tps?:|\.{1,2})?"/>/<var name="url" scope="escapeXml"/>]<var name="text" scope="url"/>[/url]</pattern>
        <template>&lt;a href=&quot;<var name="protocol"/>/<var name="url"/>&quot;&gt;<var name="text"/>&lt;/a&gt;</template>
    </code>
    <code name="url2" priority="2">
        <pattern>[url]<var name="protocol" regex="((ht|f)tps?:|\.{1,2})?"/>/<var name="url" scope="escapeXml"/>[/url]</pattern>
        <template>&lt;a href=&quot;<var name="protocol"/>/<var name="url"/>&quot;&gt;<var name="protocol"/>/<var name="url"/>&lt;/a&gt;</template>
    </code>
    <code name="url3" priority="1">
        <pattern>[url=<var name="url" scope="escapeXml"/>]<var name="text" scope="url"/>[/url]</pattern>
        <template>&lt;a href=&quot;http://<var name="url"/>&quot;&gt;<var name="text"/>&lt;/a&gt;</template>
    </code>
    <code name="url4" priority="1">
        <pattern>[url]<var name="url" scope="escapeXml"/>[/url]</pattern>
        <template>&lt;a href=&quot;http://<var name="url"/>&quot;&gt;<var name="url"/>&lt;/a&gt;</template>
    </code>

    <!-- MAILTO -->
    <code name="url5" priority="2">
        <pattern>[url=mailto:<var name="url" scope="escapeXml"/>]<var name="text" scope="url"/>[/url]</pattern>
        <template>&lt;a href=&quot;mailto:<var name="url"/>&quot;&gt;<var name="text"/>&lt;/a&gt;</template>
    </code>
    <code name="url6" priority="2">
        <pattern>[url]mailto:<var name="url" scope="escapeXml"/>[/url]</pattern>
        <template>&lt;a href=&quot;mailto:<var name="url"/>&quot;&gt;mailto:<var name="url"/>&lt;/a&gt;</template>
    </code>

    <!-- Quote block -->
    <code name="quote">
        <pattern>[quote]<var inherit="true"/>[/quote]</pattern>
        <template><![CDATA[<div class="quote"><div class="quote_title">Quote:</div><blockquote>]]><var/><![CDATA[</blockquote></div>]]></template>
    </code>

    <code name="quote_named">
        <pattern>[quote="<var name="author" inherit="true"/>"]<var name="content" inherit="true"/>[/quote]</pattern>
        <template><![CDATA[<div class="quote"><div class="quote_title">]]><var name="author"/><![CDATA[:</div><blockquote>]]><var name="content"/><![CDATA[</blockquote></div>]]></template>
    </code>

    <!-- Code block -->
    <code name="code">
        <pattern>[code="<var name="lang"/>"]<var name="code" scope="escape"/>[/code]</pattern>
        <template>&lt;pre class=&quot;brush: <var name="lang"/>&quot;&gt;<var name="code"/>&lt;/pre&gt;</template>
    </code>

    <!-- Offtopic block -->
    <code name="offtop">
        <pattern>[offtop]<var scope="basic"/>[/offtop]</pattern>
        <template><![CDATA[<div class="offtop"><p>]]><var/><![CDATA[</p></div>]]></template>
    </code>

    <!-- Simple table -->
    <code name="table">
        <pattern>[table]<var scope="tableScope"/>[/table]</pattern>
        <template>&lt;table&gt;<var/>&lt;/table&gt;</template>
    </code>
    <scope name="tableScope" ignoreText="true">
        <code name="tr">
            <pattern>[tr]<var scope="trScope"/>[/tr]</pattern>
            <template>&lt;tr&gt;<var/>&lt;/tr&gt;</template>
        </code>
        <coderef name="comment"/>
    </scope>
    <scope name="trScope" ignoreText="true">
        <code name="th">
            <pattern>[th]<var/>[/th]</pattern>
            <template>&lt;th&gt;<var/>&lt;/th&gt;</template>
        </code>
        <code name="td">
            <pattern>[td]<var/>[/td]</pattern>
            <template>&lt;td&gt;<var/>&lt;/td&gt;</template>
        </code>
        <coderef name="comment"/>
    </scope>
</configuration>